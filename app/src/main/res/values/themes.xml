<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardSStackExample" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTabLayoutDesignCruiseCabin" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/purple_700</item>
        <item name="tabTextColor">@color/teal_700</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearanceCruiseCabin</item>
    </style>

    <style name="CustomTabTextAppearanceCruiseCabin" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>
</resources>